<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="src/bootstrapper.php"
         cacheTokens="true"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         verbose="true">
    <testsuites>
        <testsuite name="PHPUnit">
            <directory>./tests/unit/Labore</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>src/Labore</directory>
        </whitelist>
    </filter>
</phpunit>